{
  "builds": [
    {
      "src": "api/webhook.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/questions", "dest": "api/webhook.py" },
    { "src": "/api/submit_score", "dest": "api/webhook.py" },
    { "src": "/api/leaderboard", "dest": "api/webhook.py" },
    { "src": "/api/webhook", "dest": "api/webhook.py" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
